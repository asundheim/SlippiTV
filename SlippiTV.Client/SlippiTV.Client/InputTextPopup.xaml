<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:local="clr-namespace:SlippiTV.Client"
             x:TypeArguments="system:String"
             x:Class="SlippiTV.Client.InputTextPopup"
             x:DataType="{x:Type local:InputTextPopup}"
             Padding="0"
             Margin="0"
             >
    <Border BackgroundColor="#FAFAFA" StrokeShape="RoundRectangle 24" Margin="0" Padding="0" StrokeThickness="0">
        <VerticalStackLayout Spacing="16" Padding="24">
            <VerticalStackLayout Spacing="8">
                <Label Text="{Binding Title}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#000"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   />
                <BoxView HeightRequest="1" Color="#333333"/>
            </VerticalStackLayout>

            <Border BackgroundColor="#f1f1f1" StrokeShape="RoundRectangle 12" StrokeThickness="0">
                <Entry x:Name="ConnectCodeEntry" Placeholder="{Binding PlaceholderText}" TextColor="Black" />
            </Border>

            <FlexLayout AlignContent="Center" VerticalOptions="Center" HorizontalOptions="Center">
                <HorizontalStackLayout FlexLayout.Shrink="1" Spacing="20">
                    <Button x:Name="SubmitButton" Text="Submit" Clicked="SubmitButton_Clicked"/>
                    <Button x:Name="CancelButton" Text="Cancel" Clicked="CancelButton_Clicked"/>
                </HorizontalStackLayout>
                <Label Text="{Binding ErrorText}" TextColor="Red"/>
            </FlexLayout>

        </VerticalStackLayout>
    </Border>
    
</toolkit:Popup>
