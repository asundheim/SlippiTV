<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:local="clr-namespace:SlippiTV.Client"
    xmlns:views="clr-namespace:SlippiTV.Client.Views"
    x:TypeArguments="system:String"
    x:Class="SlippiTV.Client.Views.InputTextPopup"
    x:DataType="{x:Type views:InputTextPopup}"
    Padding="0" Margin="0" BackgroundColor="Transparent">
    <toolkit:Popup.Resources>
        <ResourceDictionary>
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </toolkit:Popup.Resources>
    
    <Border BackgroundColor="{StaticResource Secondary}" StrokeShape="RoundRectangle 24" Margin="0" Padding="0" StrokeThickness="0" WidthRequest="360">
        <VerticalStackLayout Spacing="16" Padding="24,24,24,12">
            <VerticalStackLayout Spacing="8">
                <Label Text="{Binding Title}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryText}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"/>
                <BoxView HeightRequest="1" BackgroundColor="{StaticResource SecondaryDark}"/>
            </VerticalStackLayout>

            <Border StrokeShape="RoundRectangle 12" StrokeThickness="0">
                <Entry x:Name="ConnectCodeEntry" 
                       Placeholder="{Binding PlaceholderText}" 
                       TextColor="{StaticResource PrimaryText}" 
                       BackgroundColor="{StaticResource Quatriary}"/>
            </Border>

            <FlexLayout AlignContent="Center" VerticalOptions="Center" HorizontalOptions="Center">
                <HorizontalStackLayout FlexLayout.Shrink="1" Spacing="20">
                    <Button x:Name="SubmitButton" Text="Submit" Clicked="SubmitButton_Clicked" BackgroundColor="{StaticResource Tertiary}" TextColor="{StaticResource PrimaryText}"/>
                    <Button x:Name="CancelButton" Text="Cancel" Clicked="CancelButton_Clicked" BackgroundColor="{StaticResource Tertiary}" TextColor="{StaticResource PrimaryText}"/>
                </HorizontalStackLayout>
            </FlexLayout>
            <Label Text="{Binding ErrorText}" TextColor="#DB5151" HorizontalOptions="Center" FontAttributes="Italic"
                   IsVisible="{Binding ErrorText, Converter={StaticResource StringToVisibilityConverter}}"/>
        </VerticalStackLayout>
    </Border>
    
</toolkit:Popup>
