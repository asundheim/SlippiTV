<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlippiTV.Client.Resources.Styles.DarkTheme">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Styles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Color x:Key="TextPrimary">#FAFAFA</Color>
    <Color x:Key="TextSecondary">#CACACA</Color>
    <Color x:Key="TextTertiary">#6F6F6F</Color>
    <Color x:Key="BGPrimary">#0F0F0F</Color>
    <Color x:Key="BGSecondary">#262528</Color>
    <Color x:Key="BGTertiary">#353437</Color>
    <Color x:Key="BGButton">#3a3a3a</Color>
    <Color x:Key="BGButtonInactive">#0F0F0F</Color>
    <Color x:Key="IconPrimary">#FAFAFA</Color>
    <Color x:Key="IconSecondary">#4B4B4C</Color>
    <Color x:Key="AccentPrimary">#10FA94</Color>
    <Color x:Key="AccentSecondary">#A2A1A2</Color>
    <Color x:Key="ErrorPrimary">#DB5151</Color>
    <Color x:Key="NotificationPrimary">#FABF10</Color>
    <Color x:Key="NotificationSecondary">#333333</Color>

</ResourceDictionary>