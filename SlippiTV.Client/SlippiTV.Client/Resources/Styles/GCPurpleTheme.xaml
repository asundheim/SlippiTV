<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlippiTV.Client.Resources.Styles.GCPurpleTheme">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Styles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="TextPrimary">#FAFAFA</Color>
    <Color x:Key="TextSecondary">#C3C3C3</Color>
    <Color x:Key="TextTertiary">#ACACAC</Color>
    <Color x:Key="TextQuat">#FAFAFA</Color>
    <Color x:Key="BGPrimary">#0D0125</Color>
    <Color x:Key="BGSecondary">#140E4C</Color>
    <Color x:Key="BGTertiary">#0D002E</Color>
    <Color x:Key="BGButton">#5236DE</Color>
    <Color x:Key="BGButtonInactive">#0D004E</Color>
    <Color x:Key="IconPrimary">#DFDFF8</Color>
    <Color x:Key="IconSecondary">#454594</Color>
    <Color x:Key="AccentPrimary">#10FA94</Color>
    <Color x:Key="AccentSecondary">#2B0B98</Color>
    <Color x:Key="ErrorPrimary">#DB5151</Color>
    <Color x:Key="NotificationPrimary">#FABF10</Color>
    <Color x:Key="NotificationSecondary">#4C4E6D</Color>
    
</ResourceDictionary>