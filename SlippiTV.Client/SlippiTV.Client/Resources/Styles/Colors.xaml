<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
    
    <Color x:Key="Primary">#140E4C</Color>
    <Color x:Key="PrimaryDark">#acAAea</Color>
    <Color x:Key="PrimaryLight">#898FFF</Color>
    <Color x:Key="PrimaryText">#FAFAFA</Color>
    <Color x:Key="SecondaryText">#CACACA</Color>
    <Color x:Key="PrimaryDarkText">#2B0B98</Color>
    <Color x:Key="Secondary">#0D004E</Color>
    <Color x:Key="SecondaryDark">#3F3FFF</Color>
    <Color x:Key="Tertiary">#2F2FFF</Color>
    <Color x:Key="Quatriary">#0D0125</Color>
    
    <!-- Dark Theme Colors -->
    <Color x:Key="DarkPrimary">#171717</Color>
    <Color x:Key="DarkPrimaryDark">#000000</Color>
    <Color x:Key="DarkPrimaryLight">#191919</Color>
    <Color x:Key="DarkPrimaryText">#FAFAFA</Color>
    <Color x:Key="DarkSecondaryText">#CACACA</Color>
    <Color x:Key="DarkPrimaryDarkText">#171717</Color>
    <Color x:Key="DarkSecondary">#212023</Color>
    <Color x:Key="DarkSecondaryDark">#A2A1A2</Color>
    <Color x:Key="DarkTertiary">#353437</Color>
    <Color x:Key="DarkQuatriary">#0F0F0F</Color>

    <!-- Light Theme Colors -->
    <Color x:Key="LightPrimary">#F3F0F2</Color>
    <Color x:Key="LightPrimaryDark">#FAFAFA</Color>
    <Color x:Key="LightPrimaryLight">#C3C1C2</Color>
    <Color x:Key="LightPrimaryText">#0F0F0F</Color>
    <Color x:Key="LightSecondaryText">#1F1F1F</Color>
    <Color x:Key="LightPrimaryDarkText">#D1CED0</Color>
    <Color x:Key="LightSecondary">#CFC9CD</Color>
    <Color x:Key="LightSecondaryDark">#7D7C7D</Color>
    <Color x:Key="LightTertiary">#D2D2D3</Color>
    <Color x:Key="LightQuatriary">#F3F3F3</Color>

    <!-- GCPurple Theme Colors -->
    <Color x:Key="GCPurplePrimary">#140E4C</Color>
    <Color x:Key="GCPurplePrimaryDark">#acAAea</Color>
    <Color x:Key="GCPurplePrimaryLight">#898FFF</Color>
    <Color x:Key="GCPurplePrimaryText">#FAFAFA</Color>
    <Color x:Key="GCPurpleSecondaryText">#CACACA</Color>
    <Color x:Key="GCPurplePrimaryDarkText">#2B0B98</Color>
    <Color x:Key="GCPurpleSecondary">#0D004E</Color>
    <Color x:Key="GCPurpleSecondaryDark">#3F3FFF</Color>
    <Color x:Key="GCPurpleTertiary">#2F2FFF</Color> 
    <Color x:Key="GCPurpleQuatriary">#0D0125</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#111111</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <Color x:Key="StatusRed">#DB5151</Color>
    <Color x:Key="StatusYellow">#FABF10</Color>
    <Color x:Key="StatusGreen">#10FA94</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>