<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlippiTV.Client.Pages.SplashScreenPage"
             xmlns:local="clr-namespace:SlippiTV.Client"
             xmlns:vm="clr-namespace:SlippiTV.Client.ViewModels"
             Title="SplashScreenPage"
             x:DataType="{x:Type vm:SplashScreenViewModel}">
    <VerticalStackLayout x:Name="SplashScreenGroup" HorizontalOptions="Center" VerticalOptions="Center" Spacing="0">
        <Image x:Name="SplashScreenImage" Source="slippitv_splash.png" WidthRequest="400" HeightRequest="320"  IsVisible="True" Aspect="AspectFit" Margin="0"/>
        <Label x:Name="SplashScreenText" HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding SplashScreenStatusText}" FontAttributes="Bold" FontSize="18"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <ProgressBar IsVisible="{Binding ShowProgressBar}" Progress="{Binding Progress}" ProgressColor="{DynamicResource PrimaryText}" Margin="0,12,0,0"/>
    </VerticalStackLayout>
</ContentPage>