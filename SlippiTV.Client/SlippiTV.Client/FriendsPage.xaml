<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tb="https://notifyicon.com/"
             xmlns:vm="clr-namespace:SlippiTV.Client.ViewModels"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="SlippiTV.Client.FriendsPage"
             x:DataType="{x:Type vm:FriendsViewModel}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <mi:MauiIcon Icon="{mi:FluentFilled Icon=Add24Filled}" IconColor="Green" x:Key="AddIcon"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout Margin="10">
        <HorizontalStackLayout>
            <Label FontSize="24" Text="Add Friends by Connect Code" VerticalTextAlignment="Center"/>
            <ImageButton x:Name="AddFriendsButton" Margin="10,0,0,0" Padding="0,0,4,0" Clicked="AddFriendsButton_Clicked">
                <ImageButton.Source>
                    <FontImageSource Glyph="{mi:FluentFilled Icon=Add24Filled, IconColor=Green}"/>
                </ImageButton.Source>
            </ImageButton>
        </HorizontalStackLayout>
        <ListView ItemsSource="{Binding Friends}" HorizontalOptions="End" SelectionMode="None" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell x:DataType="{x:Type vm:FriendViewModel}">
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="{Binding ConnectCode}" FontAttributes="Bold" FontSize="18" VerticalTextAlignment="Center" />
                                <ImageButton Margin="10,0,0,0" Padding="0,0,4,0" Clicked="RemoveFriendButton_Clicked">
                                    <ImageButton.Source>
                                        <FontImageSource Glyph="{mi:FluentFilled Icon=Dismiss24Filled, IconColor=Red}"/>
                                    </ImageButton.Source>
                                </ImageButton>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout IsVisible="{Binding IsLive}" Margin="0,10,0,0">
                                <ImageButton Clicked="WatchFriendButton_Clicked">
                                    <ImageButton.Source>
                                        <FontImageSource Glyph="{mi:FluentFilled Icon=Tv24Filled}"/>
                                    </ImageButton.Source>
                                </ImageButton>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <tb:TaskbarIcon
            IconSource="slippitv.ico"
            LeftClickCommand="{Binding ShowHideWindowCommand}"
            NoLeftClickDelay="True"
            x:Name="TaskbarIcon">
            <FlyoutBase.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Command="{Binding ShowHideWindowCommand}" Text="Show/Hide Window" />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Command="{Binding ExitApplicationCommand}" Text="Quit" />
                </MenuFlyout>
            </FlyoutBase.ContextFlyout>
        </tb:TaskbarIcon>
    </VerticalStackLayout>
</ContentPage>
