<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SlippiTV.Client.SplashScreenShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SlippiTV.Client"
    xmlns:pages="clr-namespace:SlippiTV.Client.Pages"
    xmlns:vm="clr-namespace:SlippiTV.Client.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    x:DataType="{x:Type vm:SplashScreenViewModel}">
    <ShellContent ContentTemplate="{DataTemplate pages:SplashScreenPage}" BindingContext="{Binding}" Route="SplashScreen"/>
</Shell>